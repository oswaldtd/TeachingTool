<header class="lesson-head">
	<h1>New Lessons</h1>
</header>

<%= form_tag lessons_path, :method => 'get' do %>
  <p>
	  <%= text_field_tag :search %>
	  <%= submit_tag "Search" %>
  </p>
<% end %>

<section>
	<ul>
		<% @lessons.each do |lesson| %>
			<li><%=link_to lesson.lesson_name, lesson %> - <%= lesson.lesson_number %> <%= link_to "Delete", lesson_path(lesson), method: :delete, data: { confirm: "Delete this lesson? "} %> </li>
		<% end %>
	</ul>
</section>
